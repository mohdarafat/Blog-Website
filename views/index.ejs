<% include ./header %>

<h1 style="text-align: center; font-family: 'Times New Roman'; color:chocolate;">Welcome Fellas!!</h1>
<% blogs.forEach(function(blog){ %>
<div class="class"></div>
<div>
    <h2 style="font-family: sans-serif;"><%=blog.title %></h2>
    <img src="<%= blog.image %>" ><br>
    <span><%= blog.created %></span>
    <p><%=blog.body.substring(0,100) %></p>
    <a href="/blogs/<%=blog._id %>">Show more</a>
</div>

<% }) %>

<% include ./footer %>